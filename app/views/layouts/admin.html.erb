<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Admin â€” Small City Studio" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-stone-50 font-sans antialiased">
    <%= render(HeaderComponent.new) do |c| %>
      <% c.with_desktop_nav do %>
        <%= link_to "Dashboard", admin_root_path, class: "hover:text-stone-500 #{'text-red-700 hover:text-red-600' if current_page?(admin_root_path)}" %>
        <%= link_to "Bookings", admin_bookings_path, class: "hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/bookings')}" %>
        <%= link_to "Customers", admin_customers_path, class: "hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/customers')}" %>
        <%= link_to "Slots", admin_slots_path, class: "hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/slots')}" %>
        <%= link_to "Agreement", admin_agreement_path, class: "hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/agreement')}" %>
        <%= link_to "Settings", admin_settings_path, class: "hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/settings')}" %>
      <% end %>
      <% c.with_mobile_nav do %>
        <div class="px-4 py-2 space-y-1">
          <%= link_to "Dashboard", admin_root_path, class: "block px-3 py-2 rounded-md text-base font-medium hover:text-stone-500 #{'text-red-700 hover:text-red-600' if current_page?(admin_root_path)}" %>
          <%= link_to "Bookings", admin_bookings_path, class: "block px-3 py-2 rounded-md text-base font-medium hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/bookings')}" %>
          <%= link_to "Customers", admin_customers_path, class: "block px-3 py-2 rounded-md text-base font-medium hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/customers')}" %>
          <%= link_to "Slots", admin_slots_path, class: "block px-3 py-2 rounded-md text-base font-medium hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/slots')}" %>
          <%= link_to "Agreement", admin_agreement_path, class: "block px-3 py-2 rounded-md text-base font-medium hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/agreement')}" %>
          <%= link_to "Settings", admin_settings_path, class: "block px-3 py-2 rounded-md text-base font-medium hover:text-stone-500 #{'text-red-700 hover:text-red-600' if request.path.start_with?('/admin/settings')}" %>
        </div>
      <% end %>
    <% end %>

    <% flash.each do |type, message| %>
      <div class="mx-auto max-w-6xl px-4 pt-4 lg:px-8">
        <%= render FlashMessageComponent.new(type: type.to_sym, message: message) %>
      </div>
    <% end %>

    <main class="mx-auto max-w-6xl px-4 py-8 lg:px-8">
      <%= yield %>
    </main>
  </body>
</html>
