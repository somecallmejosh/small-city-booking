<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Small City Studio" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Small City">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>
    <meta name="vapid-public-key" content="<%= Rails.application.config.vapid_public_key %>">

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-stone-50 font-sans antialiased">
    <%= render(HeaderComponent.new) do |c| %>
      <% c.with_desktop_nav do %>
        <%= link_to "Help", help_path, class: "hover:text-red-600 #{'text-red-700 hover:text-red-600' if current_page?(help_path)}" %>
        <% if authenticated? %>
          <%= link_to "My Bookings", bookings_path, class: "hover:text-red-600" %>
          <div data-controller="push-subscription"
               data-push-subscription-vapid-public-key-value="<%= Rails.application.config.vapid_public_key %>">
            <button data-push-subscription-target="button"
                    data-action="push-subscription#toggle"
                    class="text-stone-600 hover:text-red-600 text-sm hidden">
              Notifications
            </button>
          </div>
          <%= button_to "Sign Out", session_path, method: :delete,
                class: "text-stone-600 hover:text-red-600 text-sm" %>
        <% else %>
          <%= link_to "Sign In", new_session_path, class: "hover:text-red-600" %>
        <% end %>
      <% end %>
      <% c.with_mobile_nav do %>
        <div class="flex flex-col gap-6 p-4">
          <%= link_to "Help", help_path, class: "hover:text-red-600 #{'text-red-700 hover:text-red-600' if current_page?(help_path)}" %>
          <% if authenticated? %>
            <%= link_to "My Bookings", bookings_path, class: "hover:text-red-600" %>
            <div data-controller="push-subscription"
                 data-push-subscription-vapid-public-key-value="<%= Rails.application.config.vapid_public_key %>">
              <button data-push-subscription-target="button"
                      data-action="push-subscription#toggle"
                      class="text-stone-600 hover:text-red-600 text-sm hidden">
                Notifications
              </button>
            </div>
            <%= button_to "Sign Out", session_path, method: :delete,
                  class: "text-stone-600 hover:text-red-600 text-sm" %>
          <% else %>
            <%= link_to "Sign In", new_session_path, class: "hover:text-red-600" %>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <% flash.each do |type, message| %>
      <div class="mx-auto max-w-6xl px-4 pt-4 lg:px-8">
        <%= render FlashMessageComponent.new(type: type.to_sym, message: message) %>
      </div>
    <% end %>

    <main class="mx-auto max-w-6xl px-4 py-8 lg:px-8">
      <%= yield %>
    </main>
  </body>
</html>
