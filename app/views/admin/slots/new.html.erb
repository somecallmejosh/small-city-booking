<% content_for :title, "New Slot â€” Admin" %>

<div class="mb-6">
  <%= render BreadcrumbComponent.new(items: [
    { label: "Admin", path: admin_root_path },
    { label: "Slots", path: admin_slots_path },
    { label: "New", path: nil }
  ]) %>
  <h1 class="mt-1 text-2xl font-semibold text-stone-900">New Slot</h1>
</div>

<div class="<%= card %> max-w-sm">
  <%= form_with model: [:admin, @slot], class: "space-y-4" do |f| %>
    <div>
      <%= f.label :starts_at, "Date & Time", class: "block text-sm font-medium text-stone-700 mb-1" %>
      <%= f.datetime_local_field :starts_at, class: input_field, required: true %>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit "Create Slot", class: btn_primary %>
      <%= link_to "Cancel", admin_slots_path, class: btn_secondary %>
    </div>
  <% end %>
</div>
