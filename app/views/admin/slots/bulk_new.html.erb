<% content_for :title, "Bulk Create Slots — Admin" %>

<div class="mb-6">
  <%= render BreadcrumbComponent.new(items: [
    { label: "Admin", path: admin_root_path },
    { label: "Slots", path: admin_slots_path },
    { label: "Bulk Create", path: nil }
  ]) %>
  <h1 class="mt-1 text-2xl font-semibold text-stone-900">Bulk Create Slots</h1>
</div>

<div class="<%= card %> max-w-xl">
  <%= form_with url: bulk_create_admin_slots_path, method: :post, class: "space-y-5" do |f| %>
    <fieldset>
      <legend class="block text-sm font-medium text-stone-700 mb-2">Days of the week</legend>
      <div class="flex flex-wrap gap-x-4 gap-y-2">
        <% [["Mon", 1], ["Tue", 2], ["Wed", 3], ["Thu", 4], ["Fri", 5], ["Sat", 6], ["Sun", 0]].each do |label, wday| %>
          <label class="flex items-center gap-1.5 text-sm text-stone-700">
            <input type="checkbox" name="days_of_week[]" value="<%= wday %>" class="rounded border-stone-300 text-stone-900 focus:ring-stone-500">
            <%= label %>
          </label>
        <% end %>
      </div>
    </fieldset>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label for="start_date" class="block text-sm font-medium text-stone-700 mb-1">Start date</label>
        <input type="date" id="start_date" name="start_date" class="<%= input_field %>" required>
      </div>
      <div>
        <label for="end_date" class="block text-sm font-medium text-stone-700 mb-1">End date</label>
        <input type="date" id="end_date" name="end_date" class="<%= input_field %>" required>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label for="start_hour" class="block text-sm font-medium text-stone-700 mb-1">Start time</label>
        <select id="start_hour" name="start_hour" class="<%= input_field %>">
          <%= options_for_select(hour_options, 9) %>
        </select>
      </div>
      <div>
        <label for="end_hour" class="block text-sm font-medium text-stone-700 mb-1">End time</label>
        <select id="end_hour" name="end_hour" class="<%= input_field %>">
          <%= options_for_select(hour_options, 17) %>
        </select>
      </div>
    </div>

    <p class="text-xs text-stone-500">Overnight ranges (e.g. 10 PM → 2 AM) are supported. Existing slots are skipped.</p>

    <div class="flex items-center gap-3 pt-2">
      <input type="submit" value="Create Slots" class="<%= btn_primary %> cursor-pointer">
      <%= link_to "Cancel", admin_slots_path, class: btn_secondary %>
    </div>
  <% end %>
</div>
