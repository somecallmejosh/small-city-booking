<% content_for :title, "Booking ##{@booking.id} — Admin" %>

<div class="mb-6 flex items-start justify-between">
  <div>
    <%= render BreadcrumbComponent.new(items: [
      { label: "Admin",    path: admin_root_path },
      { label: "Bookings", path: admin_bookings_path },
      { label: "Booking ##{@booking.id}", path: nil }
    ]) %>
    <h1 class="mt-1 text-2xl font-semibold text-stone-900">Booking #<%= @booking.id %></h1>
  </div>
  <div class="flex items-center gap-3">
    <span class="<%= booking_status_badge_classes(@booking.status) %> rounded-full px-2.5 py-0.5 text-xs font-medium">
      <%= @booking.status.capitalize %>
    </span>
    <% if @booking.admin_created? %>
      <span class="rounded-full bg-violet-100 px-2.5 py-0.5 text-xs font-medium text-violet-700">Admin-created</span>
    <% end %>
  </div>
</div>

<div class="grid gap-6 lg:grid-cols-2">
  <div class="<%= card %>">
    <h2 class="mb-4 text-sm font-semibold text-stone-700">Customer</h2>
    <p class="font-medium text-stone-900"><%= @booking.user.name.presence || "—" %></p>
    <p class="text-sm text-stone-500"><%= @booking.user.email_address %></p>
    <% if @booking.user.phone.present? %>
      <p class="text-sm text-stone-500"><%= @booking.user.phone %></p>
    <% end %>
  </div>

  <div class="<%= card %>">
    <h2 class="mb-4 text-sm font-semibold text-stone-700">Sessions</h2>
    <% sorted_slots = @booking.slots.sort_by(&:starts_at) %>
    <% if sorted_slots.any? %>
      <ul class="space-y-1">
        <% sorted_slots.each do |slot| %>
          <li class="text-sm text-stone-700">
            <%= slot.starts_at.strftime("%A, %B %-d %Y · %-I:%M %p") %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-stone-400">No slots attached.</p>
    <% end %>
    <div class="mt-4 border-t border-stone-100 pt-4">
      <p class="text-sm text-stone-600">
        Total: <span class="font-semibold text-stone-900">
          $<%= number_with_precision(@booking.total_cents / 100.0, precision: 2) %>
        </span>
      </p>
    </div>
  </div>

  <div class="<%= card %>">
    <h2 class="mb-4 text-sm font-semibold text-stone-700">Payment</h2>
    <% if @booking.stripe_payment_intent_id.present? %>
      <p class="text-xs text-stone-500 mb-1">Payment Intent</p>
      <p class="font-mono text-sm text-stone-700 break-all"><%= @booking.stripe_payment_intent_id %></p>
    <% end %>
    <% if (receipt_url = @booking.safe_receipt_url) %>
      <div class="mt-3">
        <%= link_to "View Stripe receipt →", receipt_url,
              target: "_blank", rel: "noopener noreferrer",
              class: "text-sm text-stone-700 underline hover:text-stone-900" %>
      </div>
    <% end %>
    <% if @booking.stripe_payment_link_url.present? %>
      <div class="mt-4 border-t border-stone-100 pt-4">
        <p class="text-xs text-stone-500 mb-1">Payment Link (share with customer)</p>
        <p class="break-all font-mono text-sm text-stone-700"><%= @booking.stripe_payment_link_url %></p>
      </div>
    <% end %>
    <% if @booking.refunded? %>
      <div class="mt-3 flex items-center gap-1.5 text-sm text-red-700">
        <span>&#10003;</span> Refunded
        <% if @booking.stripe_refund_id.present? %>
          <span class="text-stone-400">(<%= @booking.stripe_refund_id %>)</span>
        <% end %>
      </div>
    <% end %>
    <% if !@booking.stripe_payment_intent_id? && !@booking.stripe_payment_link_url? %>
      <p class="text-sm text-stone-400">No payment recorded.</p>
    <% end %>
  </div>

  <% if @booking.notes.present? || @booking.cancellation_reason.present? %>
    <div class="<%= card %>">
      <h2 class="mb-4 text-sm font-semibold text-stone-700">Notes</h2>
      <% if @booking.notes.present? %>
        <p class="text-sm text-stone-700 whitespace-pre-wrap"><%= @booking.notes %></p>
      <% end %>
      <% if @booking.cancellation_reason.present? %>
        <div class="mt-3 border-t border-stone-100 pt-3">
          <p class="text-xs text-stone-500">Cancellation reason</p>
          <p class="text-sm text-stone-700"><%= @booking.cancellation_reason %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<% if %w[pending confirmed].include?(@booking.status) %>
  <div class="mt-6" data-controller="confirmation-dialog">
    <button type="button" data-action="confirmation-dialog#open" class="<%= btn_danger %>">
      <% if @booking.status == "confirmed" %>Cancel & Refund<% else %>Cancel Booking<% end %>
    </button>
    <%= render ConfirmationDialogComponent.new(
      title:         @booking.status == "confirmed" ? "Cancel & Refund Booking" : "Cancel Booking",
      message:       @booking.status == "confirmed" ? "This will cancel the booking, release all slots, and issue a refund." : "This will cancel the pending booking and release the held slots.",
      confirm_url:   cancel_admin_booking_path(@booking),
      confirm_label: @booking.status == "confirmed" ? "Yes, Cancel & Refund" : "Yes, Cancel",
      cancel_label:  "Keep Booking"
    ) %>
  </div>
<% end %>
