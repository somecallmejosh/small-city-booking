<% content_for :title, "Edit Settings â€” Admin" %>

<div class="mb-6">
  <%= render BreadcrumbComponent.new(items: [
    { label: "Admin", path: admin_root_path },
    { label: "Settings", path: admin_settings_path },
    { label: "Edit", path: nil }
  ]) %>
  <h1 class="mt-1 text-2xl font-semibold text-stone-900">Edit Studio Settings</h1>
</div>

<div class="<%= card %> max-w-lg">
  <%= form_with model: @settings, url: admin_settings_path, method: :patch, class: "space-y-4" do |f| %>
    <div>
      <label for="studio_setting_studio_name" class="block text-sm font-medium text-stone-700 mb-1">Studio name</label>
      <%= f.text_field :studio_name, id: "studio_setting_studio_name", class: input_field %>
    </div>

    <div>
      <label for="studio_setting_studio_description" class="block text-sm font-medium text-stone-700 mb-1">Studio description</label>
      <%= f.text_area :studio_description, id: "studio_setting_studio_description", rows: 3, class: input_field %>
    </div>

    <div>
      <label for="studio_setting_hourly_rate" class="block text-sm font-medium text-stone-700 mb-1">Hourly rate ($)</label>
      <input type="number" id="studio_setting_hourly_rate" name="studio_setting[hourly_rate]"
             value="<%= format('%.2f', @settings.hourly_rate_cents / 100.0) %>"
             step="0.01" min="0" class="<%= input_field %>">
    </div>

    <div>
      <label for="studio_setting_cancellation_hours" class="block text-sm font-medium text-stone-700 mb-1">Cancellation window (hours)</label>
      <%= f.number_field :cancellation_hours, id: "studio_setting_cancellation_hours", min: 0, class: input_field %>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit "Save Settings", class: "#{btn_primary} cursor-pointer" %>
      <%= link_to "Cancel", admin_settings_path, class: btn_secondary %>
    </div>
  <% end %>
</div>
